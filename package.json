{
  "name": "@pgjs/core",
  "version": "0.1.4",
  "type": "module",
  "scripts": {
    "start": "vite",
    "test": "node --test",
    "build": "npm run build:lib && npm run build:gh-pages",
    "build:lib": "vite build --config=./vite.config.lib.js --outDir=dist/lib",
    "build:gh-pages": "vite build --base pagejs --outDir=dist/gh-pages",
    "deploy:gh-pages": "npm run build:gh-pages && gh-pages -d dist/gh-pages",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "main": "./dist/lib/index.umd.cjs",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.umd.cjs"
    }
  },
  "files": [
    "dist/lib"
  ],
  "devDependencies": {
    "@babel/parser": "^7.21.4",
    "@types/node": "^20.2.3",
    "body-scroll-lock": "^4.0.0-beta.0",
    "commander": "^10.0.1",
    "gh-pages": "^5.0.0",
    "http-server": "^14.1.1",
    "minimatch": "^9.0.0",
    "monaco-editor": "^0.37.1",
    "morphdom": "^2.7.0",
    "pako": "^2.1.0",
    "postcss-nesting": "^11.2.2",
    "postcss-prefix-selector": "^1.16.0",
    "prettier": "^2.8.8",
    "tsx": "^3.12.6",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-node-polyfills": "^0.8.1"
  }
}
